{
  "name": "@ianwremmel/eslint-config",
  "version": "0.0.0-development",
  "description": "Common eslint rules for @ianwremmel's projects",
  "main": "./esnext.js",
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run --silent lint",
    "test": "npm run --silent test:es5 && npm run --silent test:esnext && npm run --silent test:mocha && npm run --silent test:script",
    "test:es5": "eslint -c ./es5.js ./test/es5.js",
    "test:esnext": "eslint -c ./esnext.js ./test/esnext.js",
    "test:mocha": "eslint -c ./mocha.js ./test/mocha.js",
    "test:script": "eslint -c ./script.js ./test/script.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "author": "Ian W. Remmel <design@ianwremmel.com>",
  "license": "MIT",
  "peerDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": ">= 3",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-mocha": "^4.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ianwremmel/eslint-config.git"
  },
  "devDependencies": {
    "babel-eslint": "^8.0.0",
    "condition-circle": "^2.0.0",
    "eslint": "^5.4.0",
    "eslint-plugin-import": "^2.6.0",
    "eslint-plugin-mocha": "^5.0.0",
    "semantic-release": "^15.1.7"
  },
  "release": {
    "verifyConditions": [
      "condition-circle"
    ]
  }
}
